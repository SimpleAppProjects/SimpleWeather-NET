	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net7.0-maccatalyst|AnyCPU'">
		<CodesignEntitlements>MacCatalyst\Entitlements.plist</CodesignEntitlements>
	</PropertyGroup>
	<ItemGroup>
