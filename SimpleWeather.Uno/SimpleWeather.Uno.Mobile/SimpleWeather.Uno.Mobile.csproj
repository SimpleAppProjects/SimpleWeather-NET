		  </CustomCommands>
		</CustomCommands>
	</PropertyGroup>
	<PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX')) And '$(TargetFramework)' == 'net7.0-macos' And $(Configuration.StartsWith('Release'))">
		<CustomCommands>
		  <CustomCommands>
		    <Command>
		      <type>BeforeBuild</type>
