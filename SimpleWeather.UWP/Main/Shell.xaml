<Page
    x:Class="SimpleWeather.UWP.Main.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleWeather.UWP.Main"
    xmlns:localControls="using:SimpleWeather.UWP.Controls"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Win1809Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,7)"
    xmlns:Win1809NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract, 7)"
    mc:Ignorable="d">

    <Page.TopAppBar>
        <CommandBar x:Name="CommandBar" RequestedTheme="Dark">
            <CommandBar.Background>
                <SolidColorBrush Color="{x:Bind AppBarColor, Mode=OneWay}" />
            </CommandBar.Background>
            <CommandBar.Content>
                <TextBlock x:Name="CommandBarTitle" Text="SimpleWeather" Style="{StaticResource CommandBarLabel}"
                           Win1809NotPresent:Margin="16,12,0,0" Win1809Present:Margin="16,8,0,0" VerticalAlignment="Center" />
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>

    <Grid Background="{ThemeResource RegionBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Frame x:Name="FrameContent" Grid.Row="0" />
        <localControls:BottomNavigationBar x:Name="NavBar" Grid.Row="1" SelectionChanged="NavBarItem_Seletected">
            <localControls:BottomNavigationBar.Background>
                <SolidColorBrush Color="{x:Bind AppBarColor, Mode=OneWay}" />
            </localControls:BottomNavigationBar.Background>
        </localControls:BottomNavigationBar>
    </Grid>
</Page>