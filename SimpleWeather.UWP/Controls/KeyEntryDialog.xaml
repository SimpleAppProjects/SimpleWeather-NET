<ContentDialog
    x:Class="SimpleWeather.UWP.Controls.KeyEntryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleWeather.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Please enter an API key"
    PrimaryButtonText="Ok"
    SecondaryButtonText="Cancel"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <TextBox x:Name="KeyEntry" FontSize="12" PlaceholderText="API Key" Padding="10,7" VerticalAlignment="Center"/>
    </Grid>
</ContentDialog>
