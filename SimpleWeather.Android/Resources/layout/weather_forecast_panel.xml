<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_width="wrap_content"
    android:minWidth="100dp">

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Someday XX"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <SimpleWeather.Droid.Controls.WeatherIcon
        android:id="@+id/forecast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/wi_wu_sunny"
        android:textSize="36sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp" />

    <TextView
        android:id="@+id/forecast_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sunny"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forecast_temphi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="77`"
            android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/forecast_templo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="66`"
            android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
            android:padding="4dp"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

    </LinearLayout>
</LinearLayout>