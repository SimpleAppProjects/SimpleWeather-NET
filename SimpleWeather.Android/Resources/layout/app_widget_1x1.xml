<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="@dimen/widget_margin"
    tools:layout_height="72dp"
    tools:layout_width="72dp">

    <ImageView
        android:id="@+id/refresh_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:padding="2dp"
        android:src="@drawable/ic_refresh_white_24dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/refresh_progress"
        style="@android:style/Widget.Material.Light.ProgressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/white"
        android:padding="4dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_weather_icon"
            android:tint="@android:color/white" />

        <ImageView
            android:id="@+id/condition_temp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_fill_white_24dp" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="0.4"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="--"
            android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="New York, NY" />

    </LinearLayout>
</RelativeLayout>