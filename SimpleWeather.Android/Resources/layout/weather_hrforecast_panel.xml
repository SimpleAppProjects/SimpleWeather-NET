<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/forecast_panel_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="@dimen/forecast_date_size"
        tools:text="Someday XX" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/hrforecast_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            app:fontFamily="@font/weathericons"
            tools:fontFamily="@font/weathericons"
            tools:text="@string/wi_wu_sunny" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/hrforecast_temphi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="77ยบ" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="@dimen/forecast_condition_size"
        app:autoSizeMaxTextSize="@dimen/forecast_condition_size"
        app:autoSizeMinTextSize="2dp"
        app:autoSizeTextType="uniform"
        tools:text="Scattered Thunderstorms" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp"
            android:text="@string/wi_raindrop"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@android:color/white"
            app:fontFamily="@font/weathericons"
            tools:fontFamily="@font/weathericons" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/hrforecast_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@android:color/white"
            android:textSize="@dimen/forecast_condition_size"
            app:autoSizeMaxTextSize="@dimen/forecast_condition_size"
            app:autoSizeMinTextSize="2dp"
            app:autoSizeTextType="uniform"
            tools:text="60%" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/hrforecast_wind_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp"
            android:text="@string/wi_direction_up"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:fontFamily="@font/weathericons"
            tools:fontFamily="@font/weathericons" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/hrforecast_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@android:color/white"
            android:textSize="@dimen/forecast_condition_size"
            app:autoSizeMaxTextSize="@dimen/forecast_condition_size"
            app:autoSizeMinTextSize="2dp"
            app:autoSizeTextType="uniform"
            tools:text="6 mph" />
    </LinearLayout>

</LinearLayout>