<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/forecast_panel_width"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="@dimen/forecast_date_size"
        app:layout_constraintBottom_toTopOf="@+id/hrforecast_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Someday XX" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        app:autoSizeMaxTextSize="@dimen/forecast_icon_size"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/weathericons"
        app:layout_constraintBottom_toTopOf="@+id/hrforecast_condition"
        app:layout_constraintEnd_toStartOf="@+id/hrforecast_temphi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hrforecast_date"
        tools:fontFamily="@font/weathericons"
        tools:text="@string/wi_day_sprinkle" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_temphi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/hrforecast_condition"
        app:layout_constraintStart_toEndOf="@+id/hrforecast_icon"
        app:layout_constraintTop_toBottomOf="@+id/hrforecast_date"
        tools:text="77ยบ" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lines="2"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="@dimen/forecast_condition_size"
        app:autoSizeMaxTextSize="@dimen/forecast_condition_size"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/hrforecast_pop_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hrforecast_icon"
        tools:text="Sprinkles early. Mostly cloudy. Mild" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_pop_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="@string/wi_raindrop"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        app:fontFamily="@font/weathericons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hrforecast_pop"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hrforecast_condition"
        app:layout_constraintVertical_bias="0.0"
        tools:fontFamily="@font/weathericons" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="@dimen/forecast_condition_size"
        app:autoSizeMaxTextSize="@dimen/forecast_condition_size"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hrforecast_wind_dir"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/hrforecast_pop_icon"
        app:layout_constraintTop_toBottomOf="@+id/hrforecast_condition"
        app:layout_constraintVertical_bias="0.0"
        tools:text="100%" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_wind_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingStart="4dp"
        android:text="@string/wi_wind_direction"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:fontFamily="@font/weathericons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hrforecast_wind"
        app:layout_constraintStart_toEndOf="@+id/hrforecast_pop"
        app:layout_constraintTop_toBottomOf="@+id/hrforecast_condition"
        app:layout_constraintVertical_bias="0.0"
        tools:fontFamily="@font/weathericons" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hrforecast_wind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="@dimen/forecast_condition_size"
        app:autoSizeMaxTextSize="@dimen/forecast_condition_size"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1.5"
        app:layout_constraintStart_toEndOf="@+id/hrforecast_wind_dir"
        app:layout_constraintTop_toBottomOf="@+id/hrforecast_condition"
        app:layout_constraintVertical_bias="0.0"
        tools:text="100 mph" />

</android.support.constraint.ConstraintLayout>