<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_locations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SimpleWeather.Droid.Controls.LocationsFragment"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/gps_follow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/label_currentlocation"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
                    android:textSize="18sp" />

                <SimpleWeather.Droid.Controls.LocationPanel
                    android:id="@+id/gps_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/favorite_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/label_favoritelocations"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
                android:textSize="18sp"
                android:layout_below="@+id/gps_follow_layout"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/locations_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/locations_add"
                android:layout_below="@+id/favorite_label"
                android:orientation="vertical" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/locations_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_add_white_24dp"
                android:tint="@android:color/white"
                app:backgroundTint="@color/colorPrimary"
                app:elevation="4dp"
                app:fabSize="normal" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/search_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true" />
</RelativeLayout>